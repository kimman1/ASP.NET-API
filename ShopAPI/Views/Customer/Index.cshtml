@model IEnumerable<ShopAPI.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
}

<h2>Index</h2>
<p>
    <span class="btn btn-primary">
        <i class="fa fa-plus "></i> @Html.ActionLink("Create New", "Create",null, new { @style = "color: white;"})
    </span>
</p>
<table class="table table-striped table-hover">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPhone)
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerPhone)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CustomerID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
                    </td>
                </tr>
            }
        </tbody>
</table>
@section scripts
{
    <script>
        $(function () {
            var status = '@TempData["status"]'
            if (status != '')
            {
                if (status == 'Save Successfully')
                    alertify.success(status);
                else if (status == 'Delete Failed')
                    alertify.error(status);
                else
                    alertify.success(status);
            }

        });
    </script>
}
