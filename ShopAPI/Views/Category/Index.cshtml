@model IEnumerable<ShopAPI.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
}

<h2 class="text-center font-weight-bold">Category</h2>

<p>
    <button class="btn btn-dark"><i class="fa fa-plus-circle"></i> @Html.ActionLink("Create New", "Create",null, new {@style = "color: white; text-align: center;"})</button>
</p>
<table class="table table-dark table-hover table-borderless table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CatID },new {@style = "color: white;" }) |
                @Html.ActionLink("Details", "Details", new { id = item.CatID },new {@style = "color: white;" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CatID },new {@style = "color: white;" })
            </td>
        </tr>
    }

</table>
</table>
@section scripts
{
    <script>
        $(function () {
            var status = '@TempData["status"]'
            if (status != '')
            {
                if (status == 'Save Successfully' || status == 'Create Successfully')
                    alertify.success(status);
                else if (status == 'Delete Fail' || status == 'Create Fail' || status == 'Save Error')
                    alertify.error(status);
                else
                    alertify.success(status);
            }

        });
    </script>
}
